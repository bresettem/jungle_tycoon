<div id="pager" class="">
  <div>
    <% if pagy.prev %>
      <%= link_to(
            "Previous",
            images_path(page: pagy.prev),
            class: "btn btn-primary",
            data: {
              turbo_action: "advance"
            }
          ) %>
    <% end %>
  </div>
  <div class="text-right">
    <% if pagy.next %>
      <%= link_to(
            "Next",
            images_path(page: pagy.next),
            class: "btn btn-primary",
            data: {
              turbo_action: "advance"
            }
          ) %>
    <% end %>
  </div>
</div>